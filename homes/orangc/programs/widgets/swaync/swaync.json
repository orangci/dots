{
    "$schema": "~/.nix-profile/etc/xdg/swaync/configSchema.json",
    "positionX": "right",
    "positionY": "top",
    "cssPriority": "user",
    "control-center-width": 420,
    "notification-window-width": 420,
    "notification-icon-size": 48,
    "notification-body-image-height": 160,
    "notification-body-image-width": 200,
    "timeout": 4,
    "timeout-low": 2,
    "timeout-critical": 6,
    "fit-to-screen": true,
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 100,
    "hide-on-clear": false,
    "hide-on-action": false,
    "script-fail-notify": true,
    "notification-visibility": {
        "example-name": {
            "state": "muted",
            "urgency": "Low",
            "app-name": "Firefox"
        }
    },
    "widgets": [
        "title",
        "dnd",
        "notifications",
        "mpris"
    ],
    "widget-config": {
        "title": {
            "text": "Notifications",
            "clear-all-button": true,
            "button-text": " ï‡¸ "
        },
        "dnd": {
            "text": "Do not disturb"
        },
        "mpris": {
            "image-size": 96,
            "image-radius": 12
        }
    }
}